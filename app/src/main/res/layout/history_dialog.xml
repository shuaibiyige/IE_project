<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/dialog_title_background"
        android:orientation="vertical">
        <TextView
            android:id="@+id/history_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="Activity"
            android:fontFamily="@font/gotham"
            android:textColor="#ffffffff" />
    </LinearLayout>

    <RatingBar
        android:id="@+id/feedback_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:numStars="5"
        android:stepSize="1.0"
        android:progressTint="#fff4e643"
        android:layout_gravity="center"
        style="?android:attr/ratingBarStyleIndicator"
        android:secondaryProgressTint="@android:color/transparent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Experience:"
        android:fontFamily="@font/gotham"
        android:layout_marginLeft="30dp"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/history_dialog_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/gotham"
        android:maxLines="2"
        android:text="DescriptionDescriptionDescription"
        android:textSize="18sp" />

    <Button
        android:id="@+id/history_dialog_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        android:fontFamily="@font/gotham"
        android:background="@drawable/dialog_yes"
        android:paddingBottom="10dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:text="Yes" />
</LinearLayout>