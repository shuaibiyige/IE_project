<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Schedule &amp; Activity"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:textSize="26sp"/>

    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mcv_tileHeight="40dp"
        android:layout_marginTop="30dp"
        app:mcv_showOtherDates="all"
        app:mcv_selectionColor="#00F" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/Start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:textSize="18sp"
                android:text="Start time:"/>

            <TextView
                android:id="@+id/End_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_toRightOf="@+id/Start_time"
                android:textSize="18sp"
                android:text="End time:"/>

            <Spinner
                android:id="@+id/Start_time_spinner"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/Start_time"
                android:layout_alignLeft="@id/Start_time" />

            <Spinner
                android:id="@+id/End_time_spinner"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/End_time"
                android:layout_alignLeft="@id/End_time" />

            <ImageView
                android:id="@+id/activity_image_sport"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/Start_time_spinner"
                android:layout_alignLeft="@+id/Start_time_spinner"
                android:src="@drawable/sport"/>

            <ImageView
                android:id="@+id/activity_image_food"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="50dp"
                android:layout_below="@+id/End_time_spinner"
                android:layout_alignLeft="@+id/End_time_spinner"
                android:src="@drawable/food"/>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/schedule_finish"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:scaleType="centerInside"
            android:src="@drawable/button"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"/>

    </LinearLayout>

</LinearLayout>