    <ImageView
        android:id="@+id/questionnaire2_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/swipe_right"
        app:layout_constraintTop_toBottomOf="@+id/scrollView_down"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* - mandatory question"
        android:layout_marginLeft="40dp"
        app:layout_constraintTop_toBottomOf="@+id/questionnaire2_swipe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.2"/>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:translationY="350dp"
        android:elevation="-1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>