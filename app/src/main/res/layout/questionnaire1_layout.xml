<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#fff4f4f4">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="-400dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/questionnaire_you_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham"
        android:text="Tell us about you"
        android:textAllCaps="false"
        android:textColor="#ff707070"
        android:textSize="22sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <HorizontalScrollView
        android:id="@+id/scroll_top"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionnaire_you_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/boy_button" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="69dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/girl_button" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Age"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/parent_age_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_30" />

                    <ImageView
                        android:id="@+id/parent_age_35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/parent_age_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_40" />

                    <ImageView
                        android:id="@+id/parent_age_45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_45" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pet_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Pet"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/dog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/dog" />

                    <ImageView
                        android:id="@+id/rabbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/rabbit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/cat" />

                    <ImageView
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/other" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Car"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/have_car"
                        android:layout_width="78dp"
                        android:layout_height="69dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/have_car" />

                    <ImageView
                        android:id="@+id/without_car"
                        android:layout_width="78dp"
                        android:layout_height="69dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/no_car" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/habbit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Habbit"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/cooking"
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@drawable/cooking" />

                    <ImageView
                        android:id="@+id/diy"
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@drawable/diy" />

                    <ImageView
                        android:id="@+id/movie"
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@drawable/movie" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp">

                    <ImageView
                        android:id="@+id/baking"
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@drawable/baking" />

                    <ImageView
                        android:id="@+id/board"
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@drawable/board_game" />

                    <ImageView
                        android:id="@+id/painting"
                        android:layout_width="86dp"
                        android:layout_height="34dp"
                        android:src="@drawable/painting" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </HorizontalScrollView>







    <TextView
        android:id="@+id/questionnaire_child_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham"
        android:text="Tell us about your child"
        android:textAllCaps="false"
        android:textColor="#ff707070"
        android:textSize="22sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/questionnaire_you_text"
        app:layout_constraintTop_toBottomOf="@id/scroll_top"
        app:layout_constraintVertical_bias="0.1" />

    <HorizontalScrollView
        android:id="@+id/scrollView_down"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionnaire_child_text"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gender_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/boy_button" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="69dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/girl_button" />


                </LinearLayout>

            </LinearLayout>





            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/age_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">





                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pet_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pet"
                    android:textAlignment="center"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Car"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">





                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/habbit_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Habbit"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">





                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>


    <Button
        android:id="@+id/submit_ques"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:background="@drawable/submit_button"
        android:textAllCaps="false"
        android:text="Submit"
        android:textSize="20sp"
        android:textColor="#ffd88778"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView_down"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:translationY="350dp"
        android:elevation="-1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>