<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="#fff4f4f4">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:translationY="-400dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/questionnaire_you_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham"
        android:text="Tell us about you"
        android:textAllCaps="false"
        android:textColor="#ff707070"
        android:textSize="22sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <HorizontalScrollView
        android:id="@+id/scroll_top"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionnaire_you_text">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gender_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/boy_button" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="69dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/girl_button" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Age"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <ImageView
                        android:id="@+id/parent_age_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_30"
                        android:clickable="true"/>

                    <ImageView
                        android:id="@+id/parent_age_35"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="259dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/parent_age_40"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_40" />

                    <ImageView
                        android:id="@+id/parent_age_45"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/age_45" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pet_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Pet"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="223dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp">

                    <CheckBox
                        android:id="@+id/dog"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp"
                        android:layout_weight="1"
                        android:checked="false"
                        android:fontFamily="@font/gotham"
                        android:text="Dog"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                    <CheckBox
                        android:id="@+id/rabbit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:fontFamily="@font/gotham"
                        android:text="Rabbit"
                        android:textColor="#ffffffff"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="223dp"
                    android:layout_height="44dp"
                    android:layout_gravity="center">

                    <CheckBox
                        android:id="@+id/cat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cat"
                        android:textSize="18sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:checked="false"
                        android:layout_marginRight="20dp"/>

                    <CheckBox
                        android:id="@+id/other"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Other"
                        android:textSize="18sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:checked="false" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:text="Car"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/have_car"
                        android:layout_width="78dp"
                        android:layout_height="69dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/have_car" />

                    <ImageView
                        android:id="@+id/without_car"
                        android:layout_width="78dp"
                        android:layout_height="69dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/no_car" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/habbit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gotham"
                    android:text="Habbit"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/movie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movie"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baking"
                        android:textSize="12sp"
                        android:id="@+id/baking"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_alignTop="@+id/movie"
                        android:layout_toRightOf="@id/movie" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/cooking"
                        android:layout_below="@+id/movie"
                        android:layout_alignLeft="@id/movie" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIY"
                        android:textSize="12sp"
                        android:id="@+id/diy"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/cooking"
                        android:layout_alignLeft="@id/movie" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Painting"
                        android:textSize="12sp"
                        android:id="@+id/painting"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/baking"
                        android:layout_alignLeft="@id/baking" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Board Gaming"
                        android:textSize="12sp"
                        android:id="@+id/board_gaming"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/painting"
                        android:layout_alignLeft="@id/painting" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>







    <TextView
        android:id="@+id/questionnaire_child_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham"
        android:text="Tell us about your child"
        android:textAllCaps="false"
        android:textColor="#ff707070"
        android:textSize="22sp"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/questionnaire_you_text"
        app:layout_constraintTop_toBottomOf="@id/scroll_top"
        app:layout_constraintVertical_bias="0.1" />

    <HorizontalScrollView
        android:id="@+id/scrollView_down"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionnaire_child_text"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/question_card"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gender_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_width="38dp"
                        android:layout_height="70dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/boy_button" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="72dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="40dp"
                        android:src="@drawable/line" />

                    <ImageView
                        android:layout_width="41dp"
                        android:layout_height="69dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/girl_button" />


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:background="@drawable/question_card2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/age_child_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Age"
                    android:textAlignment="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/gotham"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="25dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13"
                        android:id="@+id/age_13"
                        android:textColor="#ffffffff"
                        android:textSize="21sp"
                        android:fontFamily="@font/gotham"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="14"
                        android:id="@+id/age_14"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ffffffff"
                        android:textSize="21sp"
                        android:fontFamily="@font/gotham"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15"
                        android:id="@+id/age_15"
                        android:layout_marginLeft="15dp"
                        android:textColor="#ffffffff"
                        android:textSize="21sp"
                        android:fontFamily="@font/gotham"/>

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:background="@drawable/question_card"
                android:layout_marginRight="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/habbit_text_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gotham"
                    android:text="Habbit"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/movie_child"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movie"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="10dp"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baking"
                        android:textSize="12sp"
                        android:id="@+id/baking_child"
                        android:layout_marginLeft="30dp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_alignTop="@+id/movie_child"
                        android:layout_toRightOf="@id/movie_child" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cooking"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/cooking_child"
                        android:layout_below="@+id/movie_child"
                        android:layout_alignLeft="@id/movie_child" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIY"
                        android:textSize="12sp"
                        android:id="@+id/diy_child"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/cooking_child"
                        android:layout_alignLeft="@id/movie_child" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Painting"
                        android:textSize="12sp"
                        android:id="@+id/painting_child"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/baking_child"
                        android:layout_alignLeft="@id/baking_child" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Board Gaming"
                        android:textSize="12sp"
                        android:id="@+id/board_gaming_child"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/painting_child"
                        android:layout_alignLeft="@id/painting_child" />
                </RelativeLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/question_card2"
                android:layout_marginRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/eating_habbit_text_child"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/gotham"
                    android:text="Eating Habbit"
                    android:textAlignment="center"
                    android:textColor="#ffffffff"
                    android:textSize="23sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <CheckBox
                        android:id="@+id/Chinese"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chinese"
                        android:layout_marginLeft="10dp"
                        android:textSize="12sp"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_alignParentLeft="true"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="American"
                        android:layout_marginLeft="30dp"
                        android:textSize="12sp"
                        android:id="@+id/American"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_alignTop="@+id/Chinese"
                        android:layout_toRightOf="@id/Chinese" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Korean"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:id="@+id/Korean"
                        android:textSize="12sp"
                        android:layout_below="@+id/Chinese"
                        android:layout_alignLeft="@id/Chinese" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Japanese"
                        android:textSize="12sp"
                        android:id="@+id/Japanese"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/Korean"
                        android:layout_alignLeft="@+id/Korean" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Australia"
                        android:textSize="12sp"
                        android:id="@+id/Australia"
                        android:textColor="#ffffffff"
                        android:fontFamily="@font/gotham"
                        android:layout_below="@+id/American"
                        android:layout_alignLeft="@id/American" />

                </RelativeLayout>

            </LinearLayout>





        </LinearLayout>
    </HorizontalScrollView>


    <Button
        android:id="@+id/submit_ques"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:background="@drawable/submit_button"
        android:textAllCaps="false"
        android:text="Submit"
        android:textSize="20sp"
        android:textColor="#ffd88778"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView_down"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        android:translationY="350dp"
        android:elevation="-1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>