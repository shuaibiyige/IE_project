<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".History">

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:translationY="-320dp"
        android:elevation="-1dp"/>

    <ImageView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:src="@drawable/round_down"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="350dp"
        android:elevation="-1dp"/>

    <TextView
        android:id="@+id/journey_history_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/gotham"
        android:text="Journey Summary"
        android:textAllCaps="false"
        android:textColor="#ff707070"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />


    <LinearLayout
        android:id="@+id/cohesion_scoll"
        android:layout_width="match_parent"
        android:layout_marginBottom="28dp"
        android:gravity="center"
        android:layout_height="370dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/journey_history_title_text"
        app:layout_constraintVertical_bias="0.05">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COHESION:\nWhat is cohesion?
\nCohesion evaluates what is perceived as parental emotional warmth and bonding, intimacy, mutual
support, care and reliability. Cohesion is deemed to be a core construct of the parent-child
relationship.
\nWhat to do to improve cohesion?
\nEmbed a sense of stability with each other by means of simple practices. Consistent implementation
of such practices can induce better quality bonding and help the child open-up more frequently and/or
willingly.
\nExamples of practices that can improve cohesion:
\n1. Having regular meals together
\n2. Establishing daily/weekly/monthly family rituals such as movie nights, spa evenings,
biking/walking exploration tours etc…
\n3. Actively expressing interest in your child’s life and volunteering to share information about
yours to illustrate genuine willingness to be part of each other’s life (without judgement)"/>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/journey_cohesion_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="#ffffffff"
        android:fontFamily="@font/gotham"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/settings_button"
        app:layout_constraintTop_toBottomOf="@+id/cohesion_scoll"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.5"/>

</androidx.constraintlayout.widget.ConstraintLayout>